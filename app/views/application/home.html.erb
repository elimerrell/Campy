<% if flash[:notice] %>
  <div class="alert alert-info" align="center">
    <p>
      <%= flash[:notice] %>
    </p>
  </div>
<% end %>

<h1 class = 'text-center'>Interact with the Campy community:</h1>
<div align="center">
  <a class="homebutton" <%= link_to "Recreation Areas", rec_areas_path %> </a>

  <a class="homebutton" <%= link_to "Profile", user_path(@current_user) %></a>
  
  <a class="homebutton" <%= link_to "Recreation Facilities", facilities_path %></a>

  <h2 class="text-center">Or check out what's trending...</h2>
</div>


<div class="alert alert-info" align="center">
  <div class="most_commented">
    <h6>The most popular recreation area is:</h6>
    <%= link_to Facility.most_comments.facility_name, facility_path(Facility.most_comments)%>
  </div>
</div>
<div class="alert alert-info" align="center">
  <div class="highest_rating">
    <h6>The highest rated recreation area is:</h6>
    <%= link_to Facility.most_comments.facility_name, facility_path(Facility.most_comments)%>
  </div>
</div>
<div class="alert alert-info" align="center">
  <div class="active_user">
    <h6>The most active user is:</h6>
    <%= link_to User.most_comments.full_name, user_path(User.most_comments)%>
  </div>
</div>
