
<% if flash[:notice] %>
  <div class="alert alert-danger" align="center">
    <p>
      <%= flash[:notice] %>
    </p>
  </div>
<% end %>


<div class="container-fluid">
    <div class="row">
      <div class="col">
      </div>
      <div class="login-box">
      <div class="col">
        <div class="form">
          <%= bootstrap_form_tag url: '/login' do |f| %>
          <%= f.text_field :username %>
          <%= f.password_field :password %>
          <div align="center">
            <%= f.submit "Login", class: 'btn btn-info btn-lg' %>
          </div>
          <% end %>
        </div>
        </div>
      </div>
      <div class="col">
      </div>
    </div>
  </div>


  <div class="container-fluid">
      <div class="row">
        <div class="col">
        </div>
        <div class="col">
          <div class="form">
            <div id="sign-up" align="center">
              <p>Haven't created an account yet?</p>
              <a class="btn btn-info" <%= link_to "Sign Up", new_user_path %></a>
            </div>
          </div>
          </div>
        <div class="col">
        </div>
      </div>
    </div>
