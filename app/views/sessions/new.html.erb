<% if flash[:notice] %>
  <p>
    <%= flash[:notice] %>
  </p>
<% end %>

<div class="form">
<%= form_tag login_path do %>
  <%= label_tag :username  %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag 'Login' %>
<% end %>
</div>

