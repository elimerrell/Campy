<div align="center">
  <h1>Recreation Facilities</h1>
</div>


<div class="container">
  <div class="jumbotron" align="center">
    <div class="jumbo-text">
      <h3>Search by state or postal code</h3>
      <h5>(ex. WA or 98105)</h5>
    </div>
    <%= search_form_for @q do |f| %>
    <%= f.search_field :facility_address_address_state_code_or_facility_address_postal_code_eq, class: "input-group-sm mb-3"%>
    <%= f.submit class: "btn btn-info"  %>
    <% end %>
  </div>
</div>


<div data-spy="scroll">
    <div class="row">
      <div class="col">
          <h3 align='center'>Campground</h3>
          <div class ='displaybox'>
          <% @facilities.each do |facility| %>
            <% if facility.is_campground%>
            <div class="card">
            <div class="card-header" align="center">
                🏕️<%= link_to facility.facility_name.titleize, facility_path(facility) %>
            </div>
            </div>
            <% end %>
          <% end %>
      </div>
    </div>
      <div class="col">
          <h3 align ='center'>Recreation Facilities</h3>
          <div class ='displaybox'>
          <% @facilities.each do |facility| %>
            <% if facility.is_facility %>
              <div class="card">
              <div class="card-header" align="center">
              🌲<%= link_to facility.facility_name, facility_path(facility) %>
              </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    
