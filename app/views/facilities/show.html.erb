
<h1><%= @facility.FacilityName %></h1>
<br>
<h3>Description: </h3> <%= sanitize @facility.FacilityDescription %>

<% if @facility.campsites.empty? == false %>
  <h2>Campsites:</h2>
  <ul>
    <% @facility.campsites.each do |campsite| %>
    <li>Campsite: <%= campsite.CampSiteName %> Type: <%= campsite.TypeOfUse %></li>
    <% end %>
  </ul>
<% end %>

