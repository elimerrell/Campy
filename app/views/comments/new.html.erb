<h2>Create Comment</h2>

<div id = "error_message">
  <% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
  <% end %>
</div>

<%= form_for(@comment) do |f| %>
    <%= f.label :facility_id%>
    <%= f.collection_select :facility_id, Facility.all, :id, :facility_name %>
    <br>
    <%= f.label :rating  %>
    <%= f.number_field :rating %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
    <br>
  <%= f.submit %>
<% end %>
