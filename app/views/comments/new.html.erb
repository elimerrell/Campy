<h2>Create Comment</h2>

<div id = "error_message">
  <% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
  <% end %>
</div>

<div class="form">
<%= bootstrap_form_for(@comment, layout: :center, control_col: "col-xs-5") do |f| %> 
    <%= f.collection_select :facility_id, Facility.all, :id, :facility_name %>
    <%= f.number_field :rating %>
    <%= f.text_field :title %>
    <%= f.text_area :comment %>
  <%= f.submit %>
<% end %>
</div>
