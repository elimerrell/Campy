
<div class="container">
  <div class="jumbotron" align="center">
    <div class="jumbo-text">
      <h3>Search for a recreation area by name or activity</h3>
      <h5>(ex. Yellowstone National Park or biking)</h5>
    </div>
    <%= search_form_for @q do |f| %>
    <%= f.search_field :rec_area_name_or_keywords_cont %>
    <%= f.submit  %>
    <% end %>
  </div>
</div>

<div class='searchcols'>
  <div class="container">
      <div class="row">
        <div class="col">
            <h3 align='center'>Recreational Areas</h3>
            <div class ='displaybox'>
              <% @areas.each do |area| %>
              <li><%= link_to area.rec_area_name, rec_area_path(area) %></li>
              <% end %>
        </div>
      </div>